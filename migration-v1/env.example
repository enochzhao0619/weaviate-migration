##############################################
# Weaviate Configuration (v3 client)
##############################################
# Example: http://127.0.0.1:8080
WEAVIATE_ENDPOINT=
# Optional; if not set, auth is skipped
WEAVIATE_API_KEY=

##############################################
# Zilliz Cloud (Milvus) Configuration
##############################################
# Example: https://in01-xxx.region.vectordb.zillizcloud.com:443
ZILLIZ_CLOUD_URI=
ZILLIZ_CLOUD_API_KEY=
# Database name; default is "default"
ZILLIZ_CLOUD_DATABASE=default

##############################################
# Migration Configuration
##############################################
# Batch size per read/insert iteration
MIGRATION_BATCH_SIZE=250
# Max retries for transient errors
MIGRATION_MAX_RETRIES=3
# Delay (seconds) between retries
MIGRATION_RETRY_DELAY=1.0

##############################################
# Zilliz Index Configuration (optional overrides)
##############################################
# Vector index type and metric used for dense vector field
ZILLIZ_INDEX_TYPE=HNSW
ZILLIZ_METRIC_TYPE=IP
# HNSW params
ZILLIZ_INDEX_M=16
ZILLIZ_INDEX_EF_CONSTRUCTION=64

##############################################
# PostgreSQL Configuration (for datasets update)
##############################################
PG_HOST=
PG_PORT=5432
PG_DATABASE=
PG_USER=
PG_PASSWORD=